<div id="viewport">
  <h2>Change your search criterias</h2>
  <ul class="stack">
    <% @users.each do |user|%>
      <li data-index="<%= user.id %>">
        <div class="card-picture" style="background-image: url(<%= cl_image_path user.picture unless user.picture.blank?%>);">
          <div class="card-name-age"> <%= user.name %>, <%= user.age %> </div>
        </div>

        <h4 class="distance-from-user" >
          <i class="fas fa-map-marker"></i>
          <%= Geocoder::Calculations.distance_between([current_user.latitude,current_user.longitude], [user.latitude,user.longitude]).round(1) %>kms
        </h4>

        <h4 class="card-ranking" >
          <i class="card-image-rank" > <%= image_tag("ranking.jpeg") %> </i>
          <%= user.ranking %>
        </h4>

        <h4 class="description" >
          <i class="fas fa-info"></i>
          <%= user.description %>
        </h4>


        <div class="btn-like-dislike" > <%= simple_form_for @answer do |f| %>
                <%= f.hidden_field :receiver_id, :value => user.id %>
               <%= f.submit name: "answer[status]", value: "like", class: "btn btn-success", id: "like-#{user.id}" %>
                <%= f.submit name: "answer[status]", value: "dislike", class: "btn btn-danger", id: "dislike-#{user.id}" %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>



<div class="cards-container" >
  <div id="viewport">
    <h4 class="card-no-more">It's time to adjust your search criterias :)</h4>
    <ul class="stack">
      <% @users.each do |user|%>
        <li data-index="<%= user.id %>">
          <div class="card-picture" style="background-image: url(<%= cl_image_path user.picture unless user.picture.blank?%>);">
            <div class="card-name-age"> <%= user.name %>, <%= user.age %> </div>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-warning"%>
          </div>

          <div class="card-info" >
            <div class="icons-card" >
              <div>
              <i class="fas fa-map-marker-alt"></i>
               to <%= Geocoder::Calculations.distance_between([current_user.latitude,current_user.longitude], [user.latitude,user.longitude]).round(1) %> km
              </div>
              <div>
              <i class="fas fa-caret-right" ></i>
              <%= user.hand %>
              </div>
            </div>

            <h6 class="card-club" >
              <i class="fas fa-home"></i>
              <%= user.club %>
            </h6>

            <h6 class="card-rank">
              <i class="fas fa-trophy"></i>
              Ranking: <%= user.ranking %>
            </h6>

            <h6 class="card-description" >
              <i class="fas fa-info"></i>
              <%= user.description %>
            </h6>
          </div>

          <%= simple_form_for @answer do |f| %>
            <div class="bottom-buttons">
              <%= f.hidden_field :receiver_id, :value => user.id %>
              <%= f.button :button, "No Way!", type: :submit, name: "answer[status]", value: "dislike", class: "btn btn-danger", id: "dislike-#{user.id}" %>
              <%= f.button :button, "Let's go!", type: :submit, name: "answer[status]", value: "like", class: "btn btn-success", id: "like-#{user.id}" %>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

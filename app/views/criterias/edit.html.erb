<div class="container">
 <h2 class="criteria-title">Change your search preferences</h2>
   <div class="card-form">
     <div class="card-criteria">
        <%= simple_form_for @user, url: criteria_path(@user), method: :patch do |f| %>
        <%= f.input :opponent_ranking, collection: 0..5 %>
        <%= f.input :opponent_gender, as: :select, collection: ["male", "female"] %>
        <%= f.input :search_radius, as: :range, input_html: { min: 0, max: 50, step: 1 } %>
        <%= f.button :submit, "Update", class: "btn btn-warning" %>
      <% end %>
      </div>
    </div>
      <%= link_to "Back", :back, class: "btn btn-primary" %>
  </div>
